<!-- Carousel used in index.liquid -->


    <div class="recipe-builder">
        <div class="partner-carousel-container" id="hardware-carousel-container">


            <div id="hardware" class="hardware">

                {% for partner in collections.partners %}
                {% if partner.data.Type == "Input" %}

                <div class="option sjs-carousel-item" id="{{ partner.data.Name }}">
                    <img class="carousel-img" id="{{ partner.data.Name }}-image" src="{{ partner.data.Image }}"
                        title="{{ partner.data.Name }}" />
                    <p class="carousel-text">{{ partner.data.Description }}</p>
                </div>

                {% endif %}
                {% endfor %}
                

                <div class="caret-button">
                    <span class="sjs-carousel-button-next material-icons icon md">expand_more</span>
                </div>

                <div class="caret-button">
                    <span class="sjs-carousel-button-prev material-icons icon md">expand_less</span>
                </div>
            </div>


        </div>



        <div class="partner-carousel-container" id="fathym-carousel-container">
            <div class="arrow-hw arrow">
                <span class="material-icons arrow-icon">arrow_forward</span>
            </div>
            <div class="arrow-sw arrow">
                <span class="material-icons arrow-icon">arrow_forward</span>
            </div>
            {% for partner in collections.partners %}
            {% if partner.data.Type == "Platform" %}
            <div class="thinky">
                <img class="thinky-icon carousel-img" id="{{ partner.data.Name }}-image" title="{{ partner.data.Name }}"
                    src="{{ partner.data.Image }}" />

                <p class="carousel-text">{{ partner.data.Description }}</p>
            </div>
            {% endif %}
            {% endfor %}

        </div>



        <div class="partner-carousel-container" id="software-carousel-container">

            <div id="software" class="software">
                {% for partner in collections.partners %}
                {% if partner.data.Type == "Output" %}

                <div class="option sjs-carousel-item" id="{{ partner.data.Name }}">
                    <img class="carousel-img" id="{{ partner.data.Name }}-image" src="{{ partner.data.Image }}"
                        title="{{ partner.data.Name }}" />
                    <p class="carousel-text">{{ partner.data.Description }}</p>
                </div>

                {% endif %}
                {% endfor %}

                <div class="caret-button">
                    <span class="sjs-carousel-button-next material-icons icon md">expand_more</span>
                </div>


                <div class="caret-button">
                    <span class="sjs-carousel-button-prev material-icons icon md">expand_less</span>
                </div>

            </div>

        </div>
    </div>

<script id="sjs-carousel" defer type="module">
    import { Carousel, LazySource } from './packages/es/index.js';

    const hwCarousel = new Carousel();

    const swCarousel = new Carousel();

    hwCarousel.Mount('.hardware');
    swCarousel.Mount('.software');

    hwCarousel.SlideInterval(4000);
    swCarousel.SlideInterval(7000);

    const lazySrcs = new LazySource();

    lazySrcs.Mount('[data-src]');

    document.getElementById("carousel-action").onmouseover = function StopCarousel() {
        hwCarousel.StopInterval();
        swCarousel.StopInterval();
    }

    document.getElementById("carousel-action").onmouseleave = function StartCarousel() {
        hwCarousel.SlideInterval(4000);
        swCarousel.SlideInterval(7000);
    }
</script>